/* --- Barres de progression vibrantes --- */
QProgressBar {
    border: 2px solid rgba(88, 101, 242, 0.3);
    border-radius: 16px;
    text-align: center;
    font-weight: 800;
    color: #FFFFFF;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(46, 52, 64, 0.8), stop:1 rgba(59, 66, 82, 0.9));
    height: 28px;
    font-size: 12px;
    

}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #5865F2, stop:0.3 #88C0D0, stop:0.6 #A3BE8C, stop:1 #5865F2);
    border-radius: 14px;
    margin: 3px;
    


}

@keyframes shimmer {
    0% { background-position: -200% center; }
    100% { background-position: 200% center; }
}

/* --- Labels modernes avec typographie am√©lior√©e --- */
QLabel {
    color: #E0E6ED;
    background-color: transparent;
    font-size: 13px;
    padding: 8px;
    font-family: 'Inter', 'Segoe UI', -apple-system, sans-serif;
}

QLabel[class="title"] {
    font-size: 32px;
    font-weight: 900;
    color: #FFFFFF;
    padding: 20px 0;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.5);
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #5865F2, stop:0.5 #7986CB, stop:1 #5C6BC0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

QLabel[class="subtitle"] {
    font-size: 20px;
    font-weight: 700;
    color: #D8DEE9;
    padding: 10px 0;
}

QLabel[class="info"] {
    color: #9AA5CE;
    font-size: 12px;
    padding: 6px;
}

QLabel[class="success"] {
    color: #A3BE8C;
    font-weight: 700;
}

QLabel[class="warning"] {
    color: #EBCB8B;
    font-weight: 700;
}

QLabel[class="error"] {
    color: #BF616A;
    font-weight: 700;
}

/* --- Bo√Ætes de dialogue premium --- */
QDialog {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(26, 31, 46, 0.98), stop:1 rgba(37, 43, 63, 0.99));
    border: 3px solid rgba(88, 101, 242, 0.4);
    border-radius: 24px;
    color: #E0E6ED;
    
                0 0 120px rgba(88, 101, 242, 0.2),

}

QDialog QLabel {
    color: #E0E6ED;
}

/* --- Scrollbars modernes --- */
QScrollBar:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(26, 31, 46, 0.6), stop:1 rgba(37, 43, 63, 0.8));
    width: 16px;
    border-radius: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #5E81AC, stop:0.7 #88C0D0, stop:1 #5E81AC);
    border-radius: 10px;
    min-height: 35px;
    margin: 3px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #88C0D0, stop:0.8 #A3BE8C, stop:1 #88C0D0);
    
}

/* --- Navigation moderne --- */
QPushButton[class="navButton"] {
    background: transparent;
    border: 2px solid transparent;
    border-radius: 16px;
    padding: 20px;
    text-align: left;
    color: #D8DEE9;
    font-weight: 600;
}

QPushButton[class="navButton"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(88, 101, 242, 0.2), stop:0.5 #3B4252, stop:1 rgba(88, 101, 242, 0.3));
    color: #FFFFFF;
    border-color: rgba(88, 101, 242, 0.5);
    

}

QPushButton[class="navButton"][selected="true"] {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 #5865F2, stop:0.4 #7986CB, stop:1 #5C6BC0);
    color: #FFFFFF;
    border-color: rgba(143, 161, 255, 0.8);
}


/* --- Effets de hover brillants --- */
QFrame[class="interactive"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(46, 52, 64, 0.9), stop:1 rgba(59, 66, 82, 0.95));
    border-color: rgba(88, 101, 242, 0.5);
}
